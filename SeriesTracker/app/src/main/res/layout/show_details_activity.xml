<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="247dp">
        <ImageView
            android:id="@+id/show_details_screenshot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AppTheme.ShowDetails.Header.Screenshot"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AppTheme.ShowDetails.Header.Overlay"/>
        <TextView
            android:id="@+id/show_details_rating"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"

            style="@style/AppTheme.ShowDetails.Header.Rating"/>
        <TextView
            android:id="@+id/show_details_year"
            style="@style/AppTheme.ShowDetails.Header.Year"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/show_details_rating"/>
        <TextView
            android:id="@+id/show_details_state"
            style="@style/AppTheme.ShowDetails.Header.State"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/show_details_content"
        android:layout_below="@id/show_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.view.PagerTabStrip
            android:id="@+id/show_details_content_pager_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.ShowDetails.Content.Header"/>
    </android.support.v4.view.ViewPager>
</LinearLayout>