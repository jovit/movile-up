<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_colorPrimary</item>
        <item name="colorPrimaryDark">@color/theme_colorPrimaryDark</item>
        <item name="colorAccent">@color/theme_colorAccent</item>
        <item name="android:textColor">@color/theme_textColor</item>
        <item name="android:textColorPrimary">@color/theme_textColorPrimary</item>
        <item name="android:windowBackground">@color/theme_windowBackground</item>
    </style>

    <!-- TO BE CONTINUED -->

    <style name="AppTheme.EpisodeDetails"></style>

    <style name="AppTheme.EpisodeDetails.Highlight">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Overlay">
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/overlay</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Title">
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:textSize">@dimen/default_textSize_veryLarge</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_large</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Information"></style>

    <style name="AppTheme.EpisodeDetails.Information.Container">
        <item name="android:paddingTop">@dimen/default_spacing_large</item>
        <item name="android:paddingLeft">@dimen/default_spacing_large</item>
        <item name="android:paddingRight">@dimen/default_spacing_large</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="AppTheme.EpisodeDetails.Information.Time"></style>

    <style name="AppTheme.EpisodeDetails.Information.Time.Clock">
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/episode_details_clock</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Information.Time.Date">
        <item name="android:textColor">@color/theme_colorPrimary</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Information.Time.Container" parent="CardView">
        <item name="contentPadding">@dimen/default_spacing_large</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Information.Summary"></style>

    <style name="AppTheme.EpisodeDetails.Information.Summary.Title">
        <item name="android:textColor">@color/default_color_third</item>
        <item name="android:textSize">@dimen/default_textSize_verySmall</item>
        <item name="android:layout_marginTop">0.5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Information.Summary.Body">
        <item name="android:textColor">@color/default_textColor_fourth</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Information.Summary.Separator">
        <item name="android:layout_marginTop">8.5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/default_background_third</item>
    </style>

    <style name="AppTheme.EpisodeDetails.Information.Summary.Container" parent="AppTheme.EpisodeDetails.Information.Time.Container">
        <item name="android:layout_marginTop">@dimen/default_spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/default_spacing_medium</item>
    </style>



    <style name="AppTheme.SeasonEpisodes"/>

    <style name="AppTheme.SeasonEpisodes.EpisodesList">
        <item name="android:background">#FFFF</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/default_background_first</item>
    </style>

    <style name="AppTheme.SeasonEpisodes.Episode"/>

    <style name="AppTheme.SeasonEpisodes.Episode.Number">
    </style>

    <style name="AppTheme.SeasonEpisodes.Episode.Number.Text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:textSize">@dimen/default_textSize_small</item>
    </style>

    <style name="AppTheme.SeasonEpisodes.Episode.Number.Image">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/episode_item_number</item>
    </style>

    <style name="AppTheme.SeasonEpisodes.Episode.Title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/default_textSize_medium</item>
        <item name="android:textColor">@color/default_textColor_fourth</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
    </style>

    <style name="AppTheme.SeasonEpisodes.Header" />

    <style name="AppTheme.SeasonEpisodes.Header.Overlay" parent="AppTheme.EpisodeDetails.Overlay"/>

    <style name="AppTheme.SeasonEpisodes.Header.Screenshot">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.SeasonEpisodes.Header.Year">
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:layout_marginTop">151dp</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
        <item name="android:textSize">@dimen/default_textSize_veryLarge</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.SeasonEpisodes.Header.Thumbnail">
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
    </style>

    <style name="AppTheme.SeasonEpisodes.Header.Episodes">
        <item name="android:textSize">@dimen/default_textSize_verySmall</item>
        <item name="android:layout_marginLeft">@dimen/default_spacing_large</item>
        <item name="android:textColor">@color/default_textColor_third</item>
        <item name="android:layout_marginTop">17dp</item>
    </style>

    <style name="AppTheme.SeasonEpisodes.Header.Rating">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rating</item>
        <item name="android:textSize">@dimen/default_textSize_large</item>
        <item name="android:textColor">@color/default_textColor_first</item>
        <item name="android:layout_marginTop">264dp</item>
        <item name="android:layout_marginRight">@dimen/default_spacing_large</item>
    </style>
</resources>